 		<class>br.com.nozinho.model.ContatoEndereco</class>
 		<class>br.com.nozinho.model.ContatoForma</class>
 		<class>br.com.nozinho.model.DemandaHistorico</class>
 		<class>br.com.nozinho.model.Oficio</class>
