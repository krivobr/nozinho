		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/dataSources/NozinhoDS</jta-data-source>
		
 		<class>br.com.nozinho.model.TipoAtendimento</class>
 		<class>br.com.nozinho.model.Profissao</class>
 		<class>br.com.nozinho.model.Cargo</class>
 		<class>br.com.nozinho.model.FormacaoIntelectual</class>
 		<class>br.com.nozinho.model.Tratamento</class>
 		<class>br.com.nozinho.model.Uf</class>
 		<class>br.com.nozinho.model.Cidade</class>
 		<class>br.com.nozinho.model.Regional</class>
 		<class>br.com.nozinho.model.OrgaoEntidade</class>
 		<class>br.com.nozinho.model.Partido</class>
 		<class>br.com.nozinho.model.Contato</class>
 		<class>br.com.nozinho.model.Usuario</class>
 		<class>br.com.nozinho.model.Perfil</class>
 		<class>br.com.nozinho.model.TipoDemanda</class>
 		<class>br.com.nozinho.model.Demanda</class>
 		<class>br.com.nozinho.model.Empresa</class>
